<h2>Change your password</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

  <div class="form-group">
    <%= f.password_field :password, label: "New password", required: true, autofocus: true ,class:"form-control input-lg", placeholder:"Password" %>
    <%= f.password_field :password_confirmation, label: "Confirm your new password", required: true , class:"form-control input-lg"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Change my password" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
