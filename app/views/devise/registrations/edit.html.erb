<div class="container ">
  <div class="row" style="margin-top:150px; margin-bottom:300px; ">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3" >

        <h2>Edit your information </h2>  <!--<%= resource_name.to_s.humanize %>-->
         
          <hr class="colorgraph">
           
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-group">
            <%= f.email_field :email, required: true, autofocus: true,class: "form-control input-lg", placeholder:"Email Address" %></br>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.password_field :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, class:"form-control input-lg", placeholder:"Password" %></br>
            <%= f.password_field :password_confirmation, required: false, class:"form-control input-lg", placeholder:"Confirm Password" %></br>
            <%= f.password_field :current_password, hint: "we need your current password to confirm your changes", required: true, class:"form-control input-lg", placeholder:"Current Password" %>
          </div>

          <div class="form-group">
            <%= f.button :submit, "Update" ,class:"btn btn-primary btn-block btn-lg"%>
          </div>
        <% end %>

        <hr class="colorgraph">

        <h4>Cancel my account</h4>
      
        <h5 >Unhappy?</h5>

        
           <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete ,class:"btn btn-danger" %>

           <%= link_to "Go Back", :back ,class:"btn btn-primary" %>
  

      </div>
    </div>
  </div>     