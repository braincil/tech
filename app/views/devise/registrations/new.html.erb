<div class="container ">
  <div class="row" style="margin-top:150px; margin-bottom:300px; ">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3" >
			<h2>Please Sign up</h2>

			<hr class="colorgraph">

			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
			  <%= devise_error_messages! %>

			 
			<div class="form-group">
			      <%= f.email_field :email, class: "form-control input-lg", placeholder:"Email Address" %>
			</div>

			<div class="form-group"> 
			      <%= f.password_field :password, autocomplete: "off", class: "form-control input-lg ", placeholder:"Password" %>
			</div>

			<div class="form-group">  
			       <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg ", placeholder:"Confirm Password" %>
			</div>


			<hr class="colorgraph">

			<div class="row">
				<div class="col-xs-12 col-md-6 ">
				    <div class="from-group">
				        <%= f.submit "Register", class: "btn btn-primary btn-block btn-lg" %>
				    </div>
				</div>

				
				<div class="col-xs-12 col-md-6 ">
				       <%= link_to "Sign in", new_session_path(resource_name),class:" btn btn-success btn-block btn-lg " %>
				</div>
			</div>
			<!--/.ROW -->	
			<% end %>
   		</div>
   		<!--/.COLOMN-->
   	</div>
   	<!--/.ROW-->
 </div>  		
<!--./CONTAINER-->