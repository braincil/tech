<div class="login">
  <div class="small-centered radius-box medium-4 columns" style="margin-top:150px; margin-bottom:300px;">
    <h3>Welcome.Please Sign in</h3>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
         
     <%= f.email_field :email, required: false, autofocus: true, placeholder:"Email Address" %>
      
      
      <div class=""> 
        <%= f.password_field :password, required: false , autocomplete: "off", placeholder:"Password" %>
      </div>


      <% if devise_mapping.rememberable? -%>
        <div class="switch round small ">
          <div class="left">
            <%= f.check_box :remember_me %><%=f.label :remember_me%>
          </div>
         <span>Remember me</span>
        </div>  
      <%end%>
  


 
    <%= f.submit "Sign in", class: "medium-12 columns button small alert block radius" %>
  <%end%> 

  <ul class="login-desc">
      <li><i class="fa fa-unlock-alt"></i><%= link_to "Forgot Password?", new_password_path(resource_name)%></li>
    <li class="sep"><em>-</em></li>
    <li><em>Don't have an account?</em><a> <%= link_to "Register", new_registration_path(resource_name)%></a></li>
  </ul>

  </div>
</div><!--/.login-->
