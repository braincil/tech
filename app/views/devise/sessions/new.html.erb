

<div class="container ">
  <div class="row" style="margin-top:150px; margin-bottom:300px; ">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3" >
			<h2>Please Sign in</h2>

			<hr class="colorgraph">

			<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
			  

			 
			<div class="form-group">
			      <%= f.email_field :email, required: false, autofocus: true, class: "form-control input-lg", placeholder:"Email Address" %>
			</div>

			<div class="form-group"> 
			      <%= f.password_field :password, required: false , autocomplete: "off", class: "form-control input-lg ", placeholder:"Password" %>
			</div>


			<% if devise_mapping.rememberable? %>
				<div class="btn btn-primary btn-sm  ">
				<%= f.check_box :remember_me %> <%= f.label :remember_me%>
				</div>
			<%end%>

			<%= link_to "Forgot your password?", new_password_path(resource_name),class:"btn btn-link pull-right" %><br />
			
			<hr class="colorgraph">

			<div class="row">
				<div class="col-xs-12 col-md-6 ">
				    <div class="from-group">
				        <%= f.submit "Sign", class: "btn btn-primary btn-block btn-lg" %>
				    </div>
				</div>

				
				<div class="col-xs-12 col-md-6 ">   
				       <%= link_to "Register", new_registration_path(resource_name),class:" btn btn-success btn-block btn-lg " %>  
				</div>
			</div>
			<!--/.ROW -->	
			<% end %>
   		</div>
   		<!--/.COLOMN-->
   	</div>
   	<!--/.ROW-->
 </div>  		
<!--./CONTAINER-->